<% layout('layouts/boilerplate')%>

<div class="container mt-4">
  <div class="row mb-3">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow border-1">
        <div class="card-body">
          <h1 class="text-center">Sign Up</h1>
          <p>
            <small class="text-muted">Fields marked * are required.</small>
          </p>
          <form action="/register" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="form-group mb-1">
              <label class="form-label" for="firstName">First Name*</label>
              <input class="form-control" type="text" id="firstName" name="firstName" placeholder="John" required autofocus />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-1">
              <label class="form-label" for="lastName">Last Name*</label>
              <input class="form-control" type="text" id="lastName" name="lastName" placeholder="Smith" required />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-1">
              <label class="form-label" for="email">Email*</label>
              <input class="form-control" type="email" id="email" name="email" placeholder="John@Smith.com" required />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-1">
              <label class="form-label" for="phone">Phone</label>
              <input class="form-control" type="text" id="phone" name="phone" placeholder="(123)-456-789" />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <label class="form-label" for="avatar">Avatar</label>
            <div class="form-file custom-file">
              <input class="form-control custom-file-input" accept="image/*" type="file" id="avatar" name="avatar" />
              <label for="image" class="form-label custom-file-label"></label>
            </div>

            <div class="form-group mb-1">
              <label class="form-label" for="username">Username*</label>
              <input class="form-control" type="text" id="username" name="username" required placeholder="John" />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-1">
              <label class="form-label" for="password">Password*</label>
              <input class="form-control" type="password" id="password" name="password" required />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-1">
              <label class="form-label" for="adminCode">Admin Code</label>
              <input class="form-control" type="password" id="adminCode" name="adminCode" placeholder="Admin Code" />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="d-grid gap-2 col-6 mx-auto">
              <button class="btn btn-success btn-block mt-1 mb-1">Register</button>
            </div>
          </form>
          <div class="text-center">
            Have an account?
            <a href="/login">Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
