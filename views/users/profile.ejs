<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/profile.css" />

<section class="gradient-custom-2 mb-5 mt-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row">
            <div class="ms-4 mt-5 d-flex flex-column">
              <img src="<%= user.avatar[0].url %>" alt="Generic placeholder image" class="img-fluid img-thumbnail" />
              <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
              <a
                class="btn btn-outline-dark"
                id="editButton"
                type="button"
                data-mdb-ripple-color="dark"
                href="/users/<%= user._id %>/edit"
                role="button"
                >Edit Profile <i class="bi bi-pencil-square"></i
              ></a>
              <% } %>
            </div>
            <div class="ms-3" id="name">
              <h5><%= user.firstName + " " + user.lastName %></h5>
              <p><%= user.email%></p>
            </div>
          </div>
          <div class="p-4 text-black">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5"><%= review.length %></p>
                <p class="small text-muted">Reviews</p>
              </div>
              <div class="px-2">
                <p class="mb-1 h5"><%= campground.length%></p>
                <p class="small text-muted">Campgrounds</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4">
                <% if(!user.bio) { %>
                <p class="font-italic mb-1"><em>No about you submitted yet...</em></p>
                <% } else { %>
                <p class="font-italic mb-1" id="bio"><%= user.bio %></p>
                <% } %>
              </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead fw-normal mb-0"><%= user.username %>'s campgrounds:</p>
            </div>
            <% if(campground.length < 1) {%>
            <h6><em>No campgrounds submitted yet...</em></h6>
            <% }else{ %>
            <div class="row">
              <div class="col">
                <% for (let campgrounds of campground) { %>
                <ul>
                  <a href="/campgrounds/<%= campgrounds.id %>"> <%= campgrounds.title %></a>
                </ul>
                <% } %> <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
